<div class="contact-container">
    <div class="contact-header">
        <div class="ascii-art">
            { " " }
        </div>
        <span class="comment">// Travaillons ensemble !</span>
    </div>

    <div class="contact-content">
        <form class="contact-form" action="/send-message" method="POST">
            <div class="form-group">
                <label class="variable" for="_name">_name</label>
                <input type="text" id="_name" name="name" required placeholder="futur employeur" />
            </div>

            <div class="form-group">
                <label class="variable" for="_email">_email</label>
                <input type="email" id="_email" name="email" required placeholder="votremail@example.com" />
            </div>

            <div class="form-group">
                <label class="variable" for="_message">_message</label>
                <textarea id="_message" name="message" required placeholder="Entrez votre message ici ..."></textarea>
            </div>

            <button type="submit" class="submit-btn">
                <span class="bracket">{</span>
                send_message
                <span class="bracket">}</span>
            </button>
        </form>

        <div class="contact-info">
            <div class="info-group">
                <span class="label">{PHONE}</span>
                <span class="value">06 28 08 82 29</span>
            </div>

            <div class="info-group">
                <span class="label">{EMAIL}</span>
                <span class="value">chadowa.k@gmail.com</span>
            </div>

            <div class="info-group">
                <span class="label">{LOCATION}</span>
                <span class="value">France , Montbeliard</span>
            </div>
        </div>

        <!-- Ajout des réseaux sociaux -->
        <div class="social-links">
            <a href="https://www.linkedin.com/in/chadi-abouhnaik-184427227/" target="_blank" class="social-icon linkedin">
                <img src="/images/linkedin.png" alt="LinkedIn">
            </a>
            <a href="https://github.com/Chadi25" target="_blank" class="social-icon github">
                <img src="/images/github.png" alt="GitHub">
            </a>
            <a href="tel:+33628088229" class="social-icon phone">
                <img src="/images/phone.png" alt="Téléphone">
            </a>
        </div>
        <!-- Fin des réseaux sociaux -->
    </div>
</div>
